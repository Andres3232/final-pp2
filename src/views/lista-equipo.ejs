<div class="container body-content">
    <div class="text-center">
      <h2>Tabla de equipos</h2>
    </div>
    <br>
    <br>
    <br>
    <table id="tablaequipos" class="table table-striped" style="width:100%">
      <thead>
        <th scope="col"  class="table-info">Num de serie</th>
        <th scope="col" class="table-info">MARCA</th>
        <th scope="col" class="table-info">TIPO</th>
        <th scope="col" class="table-info">MODELO</th>


      </thead>
      <tbody>
        <% equipos.forEach(function(equipo) { %>
          <tr>
            <td>
              <%= equipo.idEquipoRotativo %>
            </td>
            <td>
              <%= equipo.marca %>
            </td>
            <td>
              <%= equipo.tipo %>
            </td>
            <td>
              <%= equipo.modelo %>
            </td>

            <td>
              <div class="row">
                <div class="row">
                  <form action="/equipo-rotativo/edit" method="GET">
                    <input type="hidden" name="id" value="<%= equipo.idEquipoRotativo %>">
                    <button type="submit" class="btn edit-btn"><i class="bi bi-pencil"></i></button>
                  </form>
                </div>
                <div class="row"></div>
                <div class="row">
                  <form action="/equipo-rotativo/delete/<%= equipo.idEquipoRotativo %>?_method=DELETE" method="POST" onclick="return confirm('estas seguro??')">
                    <input type="hidden" name="id" value="<%= equipo.idEquipoRotativo %>">
                    <button type="submit" class="btn delete-btn"><i class="bi bi-trash"></i></button>
                  </form>
                </div>
              </div>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
    <br>
    <br>
    <div class="float-start">
      <a href="./equipo-rotativo/add-equipo" class="btn btn-dark">Agregar equipo</a>
